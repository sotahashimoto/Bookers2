<h2>User info</h2>

<% if @user.errors.any? %>
  <h2><%= pluralize(@user.errors.count, "error")%> prohibited this product from being saved:</h2>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_for(@user) do |f| %>
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, autocomplete: "name" %><br />


  <%= f.label :image %>
  <!-- 画像選択フォームの表示 -->
  <!-- profile_image部分はカラム名だが_idはつけない -->
  <%= f.attachment_field :profile_image %>

  <%= f.label :introduction %><br />
  <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %><br />

  <%= f.submit 'Update User' %>
<% end %>