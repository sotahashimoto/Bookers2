    <th></th><td><%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback:"no_image.jpg", size:"50×50" %></td>
  </tr>
  <tr>
    <th>name</th><td><%= current_user.name %></td>
  </tr>
  <tr>
    <th>introduction</th><td><%= current_user.introduction %></td>
  </tr>
</table>

<%= link_to "ユーザー編集", edit_user_path(user) %>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br />
  <%= f.submit 'Create Book' %>
<% end %>