<!-- create、editアクションのflash[:success]を呼び出している -->
<%= flash[:success] %>

<div class="container">
  <div class="row">

    <div class="col-xs-3">
      <%= render 'books/list', user: @user, book: @book %>
    </div>

    <div class="col-xs-9">
      <h1>Books</h1>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to (attachment_image_tag book.user, :profile_image, :fill, 100, 100, fallback:"no_image.jpg", size:"50×50"), user_path(book.user_id) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>